<main>
    <!-- Browse Page -->
    <section id="catalog-section" class="spaced">

        <h1 class="item">Auctions</h1>
        {{#if actions}}
        <!-- List of available auctions -->
        <ul class="catalog cards">
            <li class="item">
                <header class="pad-med">
                    <h2>Fishing Boat</h2>
                </header>

                <div class="align-center">
                    <img class="img-thumb" src="/static/assets/boat.jpg">
                </div>

                <footer class="align-center pad-med">
                    <p>Current price: <strong>$5000</strong></p>
                    <a class="action" href="#">See details</a>
                </footer>
            </li>
        </ul>
        {{else}}

        <!-- If there are no auctions to display -->
        <div class="item pad-large align-center">
            <p>Nothing has been listed yet. Be the first!</p>
            <div>
                <a class="action" href="/action/publish">Publish Auction</a>
            </div>
        </div>
        {{/if}}
    </section>

</main>