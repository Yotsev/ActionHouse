<main>
    <!-- Create Page -->
    <section id="create-section" class="">

        <h1 class="item">New Auction</h1>

        <div class="item padded align-center">

            <form class="layout left large" method="POST">

                <div class="col aligned">
                    <label>
                        <span>Title</span>
                        <input type="text" name="title"></label>
                    <label>
                        <span>Category</span>
                        <select name="category">
                            {{#each categories}}
                            <option value="{{value}}">{{label}}</option>
                            {{/each}}
                        </select>
                    </label>
                    <label>
                        <span>Image URL</span>
                        <input type="text" name="imageURL"></label>
                    <label>
                        <span>Starting price</span>
                        <input type="number" name="price"></label>
                </div>

                <div class="content pad-med align-center vertical">
                    <label>
                        <span>Description</span>
                        <textarea name="description"></textarea>
                    </label>

                    <div class="align-center">
                        <input class="action" type="submit" value="Publish Item">
                    </div>
                </div>

            </form>

        </div>

    </section>

</main>