<main>

    <!-- Details Page - Auction owner -->
    <section id="catalog-section">

        <h1 class="item">
            {{action.title}}
            <div class="f-right">
                <a class="action pad-small f-left" href="/action/{{action._id}}/edit">Edit</a>
                <a class="action pad-small f-left" href="/action/{{action._id}}/delete">Delete</a>
            </div>
        </h1>
        <div class="item padded">

            <div class="layout right large">

                <div class="col">
                    <img src="{{action.imageURL}}" class="img-large">
                </div>

                <div class="content pad-med">

                    <p>In category: <strong>{{action.category}}</strong></p>
                    <p>{{action.description}}</p>

                    <div class="align-center">
                        <div>
                            Current price: $<strong>{{action.price}}</strong>
                        </div>

                        <div>
                            {{#if bidder}}
                            <!-- If there is a bidder -->
                            Bid by <strong>{{bidder.firstName}} {{bidder.lastName}}</strong>
                            {{else}}
                            <!-- # Bonus: If there is a bidder --><!--

                                    <a class="action pad-med cta" href="#">Close Auction</a>
                                    
                                    # End of Bonus -->

                            <!-- If there are no bids -->
                            No bids
                            {{/if}}
                        </div>
                    </div>

                </div>
            </div>

            <footer>Listed by {{action.author.firstName}} {{action.author.lastName}}</footer>
        </div>

    </section>

</main>